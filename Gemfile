source 'https://rubygems.org'

ruby '3.2.3'

# Rails framework
gem 'rails', '~> 7.1.0'

# Database
gem 'sqlite3', '~> 1.6.0'

# Web server
gem 'puma', '~> 6.0'

# Assets
gem 'sprockets-rails'
gem 'importmap-rails'
gem 'turbo-rails'
gem 'stimulus-rails'

# JavaScript runtime
gem 'execjs'
# gem 'therubyracer'  # Commented out as we'll use Node.js instead

# PDF generation
gem 'wicked_pdf', '~> 2.6.0'
gem 'wkhtmltopdf-binary', '~> 0.12.6'
gem 'pdfkit'
gem 'prawn', '~> 2.4.0'
gem 'prawn-table', '~> 0.2.2'

# HTML templating and styling
gem 'sass-rails'
gem 'bootstrap', '~> 5.2.0'
gem 'jquery-rails'
gem 'chartkick'
gem 'groupdate'

# Utilities
gem 'jbuilder'
gem 'tzinfo-data'
gem 'bootsnap', require: false

group :development, :test do
  gem 'debug', platforms: %i[mri mingw x64_mingw]
end

group :development do
  gem 'web-console'
end

group :test do
  gem 'capybara'
  gem 'selenium-webdriver'
end
